---
import {basics} from '@cv'
import Section from '@/components/Section.astro';
import Mail from '@/icons/mail.astro';
import X from '@/icons/X.astro';
import GitHub from '@/icons/GitHub.astro';
import LinkedIn from "@/icons/LinkedIn.astro"
import Phone from '@/icons/Phone.astro';


const {name, label, image, location, profiles, phone, email} = basics
const {address, city, region, postalCode} = location

const SOCIALS_ICONS: Record<string, any> = {
    X,
    GitHub,
    LinkedIn,
}
---

<Section>
    <div class="container">
        <div class ="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                {city}, {region} 
            </span>
            <footer> 
                {
                    email && (
                        <a 
                        href={`mailto:${email}`} 
                        title="Enviar un correo a ${name} al correo ${email}"
                        target="_blank"
                        rel="noopener noreferrer">
                            <Mail />
                            </a>
                    )
                }
                {
                    phone && (
                        <a 
                        href={`tel:${phone}`} 
                        title="Llamar a ${name} al telefono ${phone}"
                        target="_blank"
                        rel="noopener noreferrer">
                            <Phone />
                            </a>
                    )
                }
                {
                    profiles.map(({ network, url, username }) => {
                        const Icon = SOCIALS_ICONS[network];
                        return (
                            <a 
                            href={url} 
                            title={`Visitar perfil de ${name} en ${network}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        )
                    })
                }



            </footer>

        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>

    </div>
</Section>


