---
import Section from "../Section.astro"

import { certificates } from "@cv"

// Group certificates by issuer
type Certificate = typeof certificates[0]
const certificatesByIssuer = certificates.reduce((acc, certificate) => {
  const { issuer } = certificate
  if (!acc[issuer]) {
    acc[issuer] = []
  }
  acc[issuer].push(certificate)
  return acc
}, {} as Record<string, Certificate[]>)
---

{
  certificates.length > 0 && (
    <Section title="Certificaciones">
      <div class="certificates-container">
        {
          Object.entries(certificatesByIssuer).map(([issuer, certs]) => {
            const issuerUrl = certs[0]?.url;
            return (
            <div class="issuer-group">
              <h3>
                {issuerUrl ? (
                  <a href={issuerUrl} title={`Ver ${issuer}`} target="_blank" rel="noopener noreferrer">
                    {issuer}
                  </a>
                ) : (
                  issuer
                )}
              </h3>
              <ul>
                {certs.map(({ name, date, summary, hours }) => {
                  const year = new Date(date).getFullYear()
                  return (
                    <li>
                      <article>
                        <header>
                          <h4>
                            {name}
                          </h4>
                          <time>{year}</time>
                        </header>
                        <footer>
                           {summary && <p>{summary}</p>}
                           {hours && <span class="hours">{hours}</span>}
                        </footer>
                      </article>
                    </li>
                  )
                })}
              </ul>
            </div>
            )
          })
        }
      </div>
    </Section>
  )
}

<style>
  .certificates-container {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .issuer-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .issuer-group h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 4px;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 4px;
  }

  .issuer-group h3 a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .issuer-group h3 a:hover {
    text-decoration: underline;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding-left: 8px; 
  }

  article h4 {
    font-weight: 400;
    color: var(--color-primary);
    font-size: 1rem;
    margin: 0;
  }

  article a {
    color: var(--color-primary);
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2px;
  }

  time {
    color: var(--color-secondary);
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }

  footer p {
    color: var(--color-secondary);
    font-size: 0.8rem;
    margin: 0;
  }

  .hours {
    background-color: var(--color-tag-bg);
    color: var(--color-tag-text);
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.1rem 0.4rem;
    border-radius: 4px;
    display: inline-block;
    margin-top: 4px;
    font-family: var(--font-family-sans);
  }

  @media (width <= 700px) {
    ul {
      padding-left: 0;
    }
  }

  @media print {
    .certificates-container {
      gap: 12px;
    }
    
    .issuer-group {
      display: block;
      margin-bottom: 8px;
    }

    .issuer-group h3 {
      font-size: 1rem;
      font-weight: 700;
      color: #000;
      margin-bottom: 2px;
    }

    ul {
      padding-left: 0;
      margin-top: 2px;
    }

    li {
      list-style: none;
      margin-bottom: 2px;
    }
    
    article {
      align-items: center; /* Align items vertically */
    }

    header {
      display: flex;
      justify-content: space-between;
      width: 100%;
    }

    article h4 {
      font-size: 0.9rem;
      color: #000 !important;
    }

    .hours {
      display: inline-block !important;
      border: 1px solid #ddd;
      background: #fff;
      color: #000;
      font-size: 0.65rem;
    }

    /* Hide summary if desired to save space, or show it */
    footer p {
        display: none;
    }
  }
</style>
