---
import Section from '@/components/Section.astro';
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/JavaScript.astro"
import TypeScript from "@/icons/TypeScript.astro"
import React from "@/icons/React.astro"
import Node from "@/icons/node.astro"
import MySQL from "@/icons/mysql.astro"
import Git from "@/icons/Git.astro"
import GitHub from "@/icons/GitHub.astro"
import Tailwind from "@/icons/tailwind.astro"
import Next from "@/icons/Next.astro"
import Python from "@/icons/Python.astro"
import AstroIcon from "@/icons/AstroIcon.astro"
import Vite from "@/icons/Vite.astro"
import AWS from "@/icons/AWS.astro"
import Firebase from "@/icons/Firebase.astro"
import AI from "@/icons/AI.astro"
import Hardware from "@/icons/Hardware.astro"
import Support from "@/icons/Support.astro"

import { skills } from "@cv"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  Git,
  GitHub,
  Next,
  Tailwind,
  Python,
  Astro: AstroIcon,
  Vite,
  AWS,
  Firebase,
  "OpenAI API": AI,
  "Anthropic API": AI,
  "Gemini API": AI,
  "Soporte TI": Support,
  "Hardware Maintenance": Hardware,
}
---


{
  skills.length > 0 && (
    <Section title="Conocimientos técnicos">

   <ul>
        {
            skills.map(
                ({ name }) => {
                    const iconName = name === "Next.js" ? "Next" : name
                    const Icon = SKILLS_ICONS[iconName]

                    return (
                    <li>
                        {Icon && <Icon />} <span>{name}</span>
                    </li>
                )}
            )
        }
   </ul>

    </Section>
  )
}

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        align-items: center;
        background: var(--color-accent);
        border-radius: 6px;
        color: var(--color-primary);
        display: flex;
        font-size: 0.8rem;
        font-weight: 500;
        gap: 6px;
        padding: 0.2rem 0.6rem;
    }

    @media print {
        ul {
            display: inline;
            line-height: 1.6; /* Improve readability */
        }
        
        li {
            display: inline;
            background-color: transparent;
            padding: 0;
            color: #333; /* Darker gray instead of pure black for subtle contrast */
            font-weight: 500;
            border-radius: 0;
            font-size: 0.85rem;
        }

        li::after {
            content: ", ";
            margin-right: 2px;
        }

        li:last-child::after {
            content: ".";
        }
        
        /* Ocultar iconos en impresión si se desea, o ajustarlos */
        li :global(svg) {
            display: none; 
        }
    }
</style>