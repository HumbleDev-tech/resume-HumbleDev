---
import Layout from "@/layouts/Layout.astro"

import About from "@/components/sections/About.astro"
import Education from "@/components/sections/Education.astro"
import Certificates from "@/components/sections/Certificates.astro"
import Experience from "@/components/sections/Experience.astro"
import Hero from "@/components/sections/Hero.astro"
import Projects from "@/components/sections/Projects.astro"
import Skills from "@/components/sections/Skills.astro"
import Languages from "@/components/sections/Languages.astro"
import KeyboardManager from "@/components/KeyboardManager.astro"
import ThemeToggle from "@/components/ThemeToggle.astro"

import { basics } from "@cv"
const { name, label } = basics
---

<Layout title={`Portafolio de ${name} - ${label}`}>
  <script is:inline>
    // Prevent FOUC: apply theme before paint
    (function() {
      const t = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', t);
    })();
  </script>
  <a href="#main-content" class="skip-link">Saltar al contenido</a>
  <ThemeToggle />
  <main id="main-content">
    <Hero />
    <About />
    <Experience />
    <Education />
    <Certificates />
    <Projects />
    <Skills />
    <Languages />
  </main>

  <KeyboardManager />
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 1rem;
    }
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--color-primary);
    color: var(--color-bg);
    padding: 8px 16px;
    z-index: 200;
    font-size: 0.85rem;
    transition: top 0.2s ease;
  }

  .skip-link:focus {
    top: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  main :global(section) {
    animation: fadeInUp 0.5s ease both;
  }

  main :global(section:nth-child(1)) { animation-delay: 0s; }
  main :global(section:nth-child(2)) { animation-delay: 0.05s; }
  main :global(section:nth-child(3)) { animation-delay: 0.1s; }
  main :global(section:nth-child(4)) { animation-delay: 0.15s; }
  main :global(section:nth-child(5)) { animation-delay: 0.2s; }
  main :global(section:nth-child(6)) { animation-delay: 0.25s; }
  main :global(section:nth-child(7)) { animation-delay: 0.3s; }
  main :global(section:nth-child(8)) { animation-delay: 0.35s; }
</style>