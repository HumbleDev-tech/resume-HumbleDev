---
import { basics } from "@cv"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary, url, name } = basics
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />
    <link rel="canonical" href={url || Astro.url.href} />
    <meta name="author" content={name} />

    <meta property="og:url" content={url || Astro.url.href} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content={image} />

    <meta name="twitter:card" content="summary_large_image" />
    {url && <meta property="twitter:domain" content={url.split("//")[1]?.split("/")[0] ?? ''} />}
    <meta property="twitter:url" content={url || Astro.url.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content={image} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-text: #444;
    --color-primary: #000;
    --color-secondary: #555;
    --color-accent: #eee;
    --color-bg: #fff;
    --color-bg-secondary: #fdfdfd;
    --color-border: #eee;
    --color-border-hover: #ddd;
    --color-muted: #777;
    --color-subtle: #666;
    --color-tag-bg: #f3f3f3;
    --color-tag-text: #444;
    --color-tag-border: #eee;
    --color-kbd-bg: #eee;
    --color-card-border: #f2f2f2;
    --color-card-shadow: rgba(0,0,0,0.05);
    --color-tooltip-bg: #333;
    --color-tooltip-text: #fff;
    --color-link: #111;
    --font-family-sans: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    --font-family-mono: Menlo, Monaco, Lucida Console, "Courier New", Courier, monospace;
  }

  [data-theme="dark"] {
    --color-text: #ccc;
    --color-primary: #f0f0f0;
    --color-secondary: #aaa;
    --color-accent: #2a2a3e;
    --color-bg: #111827;
    --color-bg-secondary: #1f2937;
    --color-border: #374151;
    --color-border-hover: #4b5563;
    --color-muted: #9ca3af;
    --color-subtle: #d1d5db;
    --color-tag-bg: #1f2937;
    --color-tag-text: #d1d5db;
    --color-tag-border: #374151;
    --color-kbd-bg: #374151;
    --color-card-border: #374151;
    --color-card-shadow: rgba(0,0,0,0.3);
    --color-tooltip-bg: #4b5563;
    --color-tooltip-text: #f3f4f6;
    --color-link: #e5e7eb;
  }

  html {
    font-family: var(--font-family-mono);
    background: var(--color-bg);
    color: var(--color-text);
    letter-spacing: -0.025rem;
    touch-action: manipulation;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  a:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: 2px;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family: var(--font-family-sans);
    color: var(--color-primary);
  }

  p {
    color: var(--color-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    body {
      font-size: 0.75rem;
    }

    main {
      padding: 0 !important;
    }

    h1 {
      font-size: 1.4rem;
    }

    h2 {
      font-size: 1rem;
      margin-bottom: 2px;
    }

    h3 {
      font-size: 0.85rem;
    }

    h4 {
      font-size: 0.8rem;
    }

    p {
      font-size: 0.75rem;
      line-height: 1.35;
    }

    section {
      margin-bottom: 8px !important;
    }
  }

  @page {
    margin: 0.5cm;
  }
</style>